<h1 style="text-align : center;">Welcome to Creamery-on-a-Click</h1>

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
     <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>   
    </div>
</div>

<a href="#"><b style ="text-align: left">Add an item</b></a> 

{{# each items }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <p class="description">"{{ this.story}}"</p>
                         <div class="clearfix">
                             <p class="description pull-left">({{ this.size }})</p>
                             <div class="price pull-right">${{ this.price }}</div>
                         </div>
                        
                        <div class="clearfix">
                            <a href="#" class= "pull-left"><b>Update</b></a> 
                            <a href="#" class= "pull-right"><b>Delete</b></a> 
                                
                        </div>                         
                        
                        
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}


