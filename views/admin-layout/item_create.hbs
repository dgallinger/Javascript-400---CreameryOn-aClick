
    
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
       
        <h4 style ="text-align:center">Create a new item </h4>
        <div id="error" class="alert alert-danger hidden">
           
        </div>
        <form action="/admin/items/add" method="post">

                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="imagePath">Image Url</label>
                        <input type="url"  class="form-control" required name="imagePath">
                </div>
                
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="string" class="form-control" required name="title">
                    </div>
                
                </div>
                
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="descripton">Description</label>
                        <input type="string" class="form-control" required name="description">
                    </div>
                </div>
                <hr>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="story">Story</label>
                        <input type="string" class="form-control" required name="story">
                    </div>
                </div>
                
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="size">Size</label>
                        <input type="string"  class="form-control" required name="size">
                    </div>
                </div>
                <hr>
                
                <div class="col-xs-12">
                     <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" required name="price">
                    </div>
                </div>
                <hr>

                <button type="submit" class="btn btn-success">Submit</button>
             </form>
    </div>


