
<h1 style="text-align : center;">Welcome to Creamery-on-a-Click</h1>


<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
     <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>  
    <div id="error" class="alert alert-danger" {{#if noErrMessages}}hidden{{/if}}>
            {{ errorMsg }}
    </div> 
    
    </div>
</div>



{{# each items }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <p class="description">"{{ this.story}}"</p>
                        <div class="clearfix">
                        <p class="description pull-left">({{ this.size }})</p>
                        <p  class="price pull-right"><strong>${{ this.price }}</strong></p>
                        </div>
                        <div class="clearfix">
                            
                          
                            <a href="/add-to-wishlist/{{this._id}}" class="btn btn-success pull-left" role = "button" ><i class="fa fa-heart" aria-hidden="true"></i> </a> 
                            
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>  

                                              
                        </div>
                        
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}




