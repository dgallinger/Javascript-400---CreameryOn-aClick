
<h1 style="text-align : center;">Welcome to Creamery-on-a-Click</h1>
<p>{{mdstring}}</p>

<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
     <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>   
    </div>
</div>



{{# each items }}
    <div class="row">
        {{# each this }}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{ this.title }}</h3>
                        <p class="description">{{ this.description }}</p>
                        <p class="description">"{{ this.story}}"</p>
                        <p class="description">({{ this.size }})</p>
                        <div class="clearfix">
                            <div class="price pull-left">${{ this.price }}</div>
                            <a href="/order/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>                          
                        </div>
                        <a href="#" >Add to Wishlist</a>  
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}


