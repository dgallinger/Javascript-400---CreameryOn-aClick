{{# if this.items }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <ul class="list-group">
                {{#each items}}
                    <li class="list-group-item">
                        <span style="font-weight: bold"> {{this.item.title}}</span>
                        <span class="label label-success"> ${{this.item.price}}</span>
                        <div class="btn">
                         <a href="/remove/{{this.item._id}}" >
                           <button type="button" class="btn btn-primary btn-xs ">
                                Remove  <span ></span>
                            </button>
                        </a> 
                        
                            
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </div>
    
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <a href= '/wishlist' type="button" class="btn btn-success">Create a Wishlist</a>
        </div>
    </div>
 {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
            <h2>No Items in Wishlist Cart!</h2>
        </div>
    </div>
{{/if}} 